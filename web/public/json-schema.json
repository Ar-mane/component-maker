{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "json schema"
    },
     "templateFolder": {
      "type": "string",
      "description": "The folder containing templates"
    },
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "Label for the template"
          },
          "detail": {
            "type": "string",
            "description": "Details about the template"
          },
          "rootFolder": {
            "type": "string",
            "description": "Root folder of the template"
          },
          "variable": {
            "type": "string",
            "description": "Variable associated with the template"
          },
          "destination": {
            "type": "string",
            "description": "Destination folder for the template (optional)"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "fileName": {
                  "type": "string",
                  "description": "Name of the file"
                },
                "destination": {
                  "type": "string",
                  "description": "Destination folder for the file"
                }
              },
              "required": ["fileName", "destination"],
              "additionalProperties": false
            },
            "description": "Array of files associated with the template (optional)"
          },
          "effects": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "file": {
                  "type": "string",
                  "description": "Name of the file affected by the effect"
                },
                "action": {
                  "type": "string",
                  "enum": ["edit"],
                  "description": "Action to perform on the file (currently only 'edit' is supported)"
                },
                "concat": {
                  "type": "string",
                  "enum": ["start", "end"],
                  "description": "Concatenation type (either 'start' or 'end')"
                },
                "content": {
                  "type": "string",
                  "description": "Content to be applied by the effect"
                }
              },
              "required": ["file", "action", "concat", "content"],
              "additionalProperties": false
            },
            "description": "Array of effects associated with the template (optional)"
          }
        },
        "required": ["label", "detail", "rootFolder", "variable"],
        "additionalProperties": false
      },
      "description": "Array of templates"
    }
  },
  "required": ["templateFolder", "templates"],
  "additionalProperties": false
}
